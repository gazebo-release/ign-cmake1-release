#!/usr/bin/make -f
# -*- makefile -*-

.PHONY: override_dh_auto_configure override_dh_auto_install override_dh_auto_shlibdeps

%:
	dh $@ --parallel --buildsystem=cmake

override_dh_auto_configure:
	dh_auto_configure -- \
            -DCMAKE_BUILD_TYPE=RelWithDebInfo

override_dh_auto_install:
	echo $(PWD)
	dh_auto_install

# Ignore testing libs
override_dh_auto_shlibdeps:
	dh_shlibdeps -Xlibignition-core_
